# Template file for 'lksctp-tools'
pkgname=lksctp-tools
version=1.0.17
revision=1
#create_wrksrc=yes
#only_for_archs="i686 x86_64"
build_style=gnu-configure
configure_args="--prefix=/usr --sbindir=/usr/bin --libdir=/usr/lib"
makedepends="libtool automake autoconf linux-headers"
short_desc="User-space access to Linux Kernel SCTP"
maintainer="bitshark <bitshark@bitshark.net>"
license="GPL-3 GPL-2 LGPL-2"
homepage="http://lksctp.sourceforge.net"
distfiles="$SOURCEFORGE_SITE/lksctp/lksctp-tools-${version}.tar.gz"
checksum=1aeb204cdb2befc94d9eb3037d1609c9d1d2cd5379d6dd2c0a8ca9b10533aa15

#removed since all the binaries have ldd dependencies on the shared objects
lksctp-tools-devel_package() {
	depends="${makedepends} lksctp-tools>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}

